<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Assess patient</h:title>
    <model>
      <instance>
        <assessment id="assessment" prefix="J1!assessment!" delimiter="#" version="1">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <task_id/>
            <contact>
              <_id/>
              <patient_id/>
              <name/>
              <parent>
                <_id/>
                <parent>
                  <_id/>
                  <name/>
                  <phone/>
                  <parent>
                    <_id/>
                  </parent>
                </parent>
              </parent>
            </contact>
          </inputs>
          <patient_id/>
          <patient_name/>
          <group_assessment>
            <cough/>
            <cough_duration/>
          </group_assessment>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </assessment>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/assessment/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/assessment/inputs/source" type="string"/>
      <bind nodeset="/assessment/inputs/source_id" type="string"/>
      <bind nodeset="/assessment/inputs/task_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/name" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/parent/_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/parent/name" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/parent/phone" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/parent/parent/_id" type="string"/>
      <bind nodeset="/assessment/patient_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/assessment/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/assessment/group_assessment/cough" type="select1" required="true()"/>
      <bind nodeset="/assessment/group_assessment/cough_duration" type="select1" required="true()" relevant=" /assessment/group_assessment/cough  = 'yes'"/>
      <bind nodeset="/assessment/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/assessment/inputs">
      <label>Patient</label>
      <group ref="/assessment/inputs/contact">
        <label>Contact</label>
        <group ref="/assessment/inputs/contact/parent">
          <label>Parent</label>
          <group ref="/assessment/inputs/contact/parent/parent">
            <label>Grandparent</label>
            <group ref="/assessment/inputs/contact/parent/parent/parent">
              <label>Great Grandparent</label>
            </group>
          </group>
        </group>
      </group>
    </group>
    <group ref="/assessment/group_assessment">
      <label>Assessment</label>
      <select1 ref="/assessment/group_assessment/cough">
        <label>Does <output value=" /assessment/patient_name "/> have a cough?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/assessment/group_assessment/cough_duration">
        <label>How long has the cough lasted?</label>
        <item>
          <label>3 days or less</label>
          <value>3</value>
        </item>
        <item>
          <label>4 - 7 days</label>
          <value>7</value>
        </item>
        <item>
          <label>8 - 13 days</label>
          <value>13</value>
        </item>
        <item>
          <label>14 days or more</label>
          <value>14</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>
