            <name/>
            <display_name/>
            <notes/>
            <sex/>
            <date_of_birth/>
            <age_set/>
            <dob_known/>
            <dob_calendar/>
            <age_years/>
            <age_months/>
            <ephemeral_months/>
            <ephemeral_years/>
            <dob_approx/>
            <dob_raw/>
            <dob_iso/>
            <person_age_years/>
            <person_age_months/>
            <n_age/>
            <phone/>
            <secondary_phone/>
