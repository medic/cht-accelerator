          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/household_member/parent" type="string"/>
      <bind nodeset="/data/household_member/type" type="string"/>
      <bind nodeset="/data/household_member/contact_type" type="string"/>
      <bind nodeset="/data/household_member/name" type="string" required="true()"/>
      <bind nodeset="/data/household_member/display_name" type="string" calculate="../name"/>
      <bind nodeset="/data/household_member/notes" type="string"/>
      <bind nodeset="/data/household_member/sex" type="select1" required="true()"/>
      <bind nodeset="/data/household_member/date_of_birth" type="string" calculate="../dob_iso"/>
      <bind nodeset="/data/household_member/age_set" type="select1" required="true()"/>
      <bind nodeset="/data/household_member/dob_known" type="select1" relevant="../age_set = 'over5'" required="true()"/>
      <bind nodeset="/data/household_member/dob_calendar" type="date" relevant="../age_set = 'under5' or ../dob_known = 'yes'" jr:constraintMsg="Age must be between 0 and 100" required="true()" constraint="floor(decimal-date-time(.)) &lt;= floor(decimal-date-time(today())) and floor( difference-in-months( . , today() ) div 12 ) &lt;= 100"/>
      <bind nodeset="/data/household_member/age_years" type="int" relevant="../age_set = 'over5' and ../dob_known = 'no'" jr:constraintMsg="Age must be between 0 and 100" required="true()" constraint=". &gt;= 0 and . &lt;=100"/>
      <bind nodeset="/data/household_member/age_months" type="string" calculate="0"/>
      <bind nodeset="/data/household_member/ephemeral_months" type="string" calculate="if(format-date-time(today(),&quot;%m&quot;) - ../age_months &lt; 0, format-date-time(today(),&quot;%m&quot;) - ../age_months + 12, format-date-time(today(),&quot;%m&quot;) - ../age_months)"/>
      <bind nodeset="/data/household_member/ephemeral_years" type="string" calculate="if(format-date-time(today(),&quot;%m&quot;) - ../age_months &lt; 0, format-date-time(today(),&quot;%Y&quot;) - ../age_years - 1, format-date-time(today(),&quot;%Y&quot;) -../age_years)"/>
      <bind nodeset="/data/household_member/dob_approx" type="string" calculate="date(concat(string(../ephemeral_years),'-',if(../ephemeral_months&lt;10, concat('0',string(../ephemeral_months)), ../ephemeral_months),'-',string(format-date-time(today(), &quot;%d&quot;))))"/>
      <bind nodeset="/data/household_member/dob_raw" type="string" calculate="if(../dob_known = 'yes' or ../age_set = 'under5', ../dob_calendar,../dob_approx )"/>
      <bind nodeset="/data/household_member/dob_iso" type="string" calculate="format-date-time(decimal-date-time(../dob_raw),&quot;%Y-%m-%d&quot;)"/>
      <bind nodeset="/data/household_member/person_age_years" type="string" calculate="floor( difference-in-months( ../dob_iso, today() ) div 12 )"/>
      <bind nodeset="/data/household_member/person_age_months" type="string" calculate="floor(difference-in-months( ../dob_iso, today() ))"/>
      <bind nodeset="/data/household_member/n_age" readonly="true()" type="string" relevant="false()"/>
      <bind nodeset="/data/household_member/phone" type="tel" relevant=" /data/household_member/person_age_years  &gt;=10" jr:constraintMsg="Please make sure the number is not already in use by another person and is in the format 07XX XXX XXX" constraint="1"/>
      <bind nodeset="/data/household_member/secondary_phone" type="tel" relevant=" /data/household_member/person_age_years  &gt;=10" jr:constraintMsg="Please make sure the number is not already in use by another person and is in the format 07XX XXX XXX" constraint="1"/>
      <bind nodeset="/data/household_member/relationship_to_primary_caregiver" type="select1" required="true()"/>
      <bind nodeset="/data/household_member/relationship_to_pc_other" type="string" relevant="../relationship_to_primary_caregiver = 'other'" required="true()"/>
      <bind nodeset="/data/household_member/meta/created_by" type="string"/>
      <bind nodeset="/data/household_member/meta/created_by_person_uuid" type="string"/>
      <bind nodeset="/data/household_member/meta/created_by_place_uuid" type="string"/>
      <bind nodeset="/data/household_member/meta/last_edited_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/household_member/meta/last_edited_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/household_member/meta/last_edited_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
