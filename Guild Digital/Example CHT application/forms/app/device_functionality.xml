<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Device Functionality</h:title>
    <model>
      <instance>
        <device_functionality id="device_functionality" prefix="J1!device_functionality!" delimiter="#" version="2024-08-27  10-29">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source/>
            <source_id/>
            <user>
              <contact_id/>
              <facility_id/>
              <phone/>
            </user>
            <contact>
              <_id/>
              <name/>
              <role/>
              <parent>
                <_id/>
                <parent>
                  <_id/>
                  <parent>
                    <_id/>
                  </parent>
                </parent>
              </parent>
            </contact>
          </inputs>
          <patient_id/>
          <parent_1_id/>
          <parent_2_id/>
          <parent_3_id/>
          <user_phone/>
          <contact_role/>
          <created_by/>
          <created_by_person_uuid/>
          <created_by_place_uuid/>
          <g_device_functionality>
            <working_condition/>
            <records_synched/>
            <help_vht/>
            <device_condition/>
            <device/>
            <other/>
            <stolen_device_reported/>
            <to_who/>
            <police_report_advice/>
          </g_device_functionality>
          <s_note_submit_button>
            <s_note_vht_details/>
            <s_vht_details/>
            <s_device_condition/>
            <s_okay/>
            <s_device_condition_1/>
            <s_device_condition_2/>
            <s_device_condition_3/>
            <s_device_condition_4/>
            <s_device/>
            <report/>
            <follow_up/>
            <s_followup_note/>
          </s_note_submit_button>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </device_functionality>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/device_functionality/inputs" relevant="false()"/>
      <bind nodeset="/device_functionality/inputs/source" type="string"/>
      <bind nodeset="/device_functionality/inputs/source_id" type="string"/>
      <bind nodeset="/device_functionality/inputs/user/contact_id" type="string"/>
      <bind nodeset="/device_functionality/inputs/user/facility_id" type="string"/>
      <bind nodeset="/device_functionality/inputs/user/phone" type="string"/>
      <bind nodeset="/device_functionality/inputs/contact/_id" type="string"/>
      <bind nodeset="/device_functionality/inputs/contact/name" type="string"/>
      <bind nodeset="/device_functionality/inputs/contact/role" type="string"/>
      <bind nodeset="/device_functionality/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/device_functionality/inputs/contact/parent/parent/_id" type="string"/>
      <bind nodeset="/device_functionality/inputs/contact/parent/parent/parent/_id" type="string"/>
      <bind nodeset="/device_functionality/patient_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/device_functionality/parent_1_id" type="string" calculate="../inputs/contact/parent/_id"/>
      <bind nodeset="/device_functionality/parent_2_id" type="string" calculate="../inputs/contact/parent/parent/_id"/>
      <bind nodeset="/device_functionality/parent_3_id" type="string" calculate="../inputs/contact/parent/parent/parent/_id"/>
      <bind nodeset="/device_functionality/user_phone" type="string" calculate="../inputs/user/phone"/>
      <bind nodeset="/device_functionality/contact_role" type="string" calculate="../inputs/contact/role"/>
      <bind nodeset="/device_functionality/created_by" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/device_functionality/created_by_person_uuid" type="string" calculate="../inputs/user/contact_id"/>
      <bind nodeset="/device_functionality/created_by_place_uuid" type="string" calculate="../inputs/user/facility_id"/>
      <bind nodeset="/device_functionality/g_device_functionality/working_condition" type="select1" required="true()"/>
      <bind nodeset="/device_functionality/g_device_functionality/records_synched" type="select1" relevant=" /device_functionality/g_device_functionality/working_condition  = 'yes'" required="true()"/>
      <bind nodeset="/device_functionality/g_device_functionality/help_vht" readonly="true()" type="string" relevant=" /device_functionality/g_device_functionality/records_synched  = 'no'"/>
      <bind nodeset="/device_functionality/g_device_functionality/device_condition" type="select1" relevant=" /device_functionality/g_device_functionality/working_condition  = 'no'" required="true()"/>
      <bind nodeset="/device_functionality/g_device_functionality/device" type="select1" relevant=" /device_functionality/g_device_functionality/device_condition  = 'stolen'" required="true()"/>
      <bind nodeset="/device_functionality/g_device_functionality/other" type="string" relevant=" /device_functionality/g_device_functionality/device_condition  = 'other'" required="true()"/>
      <bind nodeset="/device_functionality/g_device_functionality/stolen_device_reported" type="select1" relevant=" /device_functionality/g_device_functionality/device_condition  = 'stolen'" required="true()"/>
      <bind nodeset="/device_functionality/g_device_functionality/to_who" type="select" relevant=" /device_functionality/g_device_functionality/stolen_device_reported  = 'yes'" required="true()"/>
      <bind nodeset="/device_functionality/g_device_functionality/police_report_advice" readonly="true()" type="string" relevant=" /device_functionality/g_device_functionality/stolen_device_reported  = 'no'"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_note_vht_details" readonly="true()" type="string"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_vht_details" readonly="true()" type="string"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_device_condition" readonly="true()" type="string"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_okay" readonly="true()" type="string" relevant=" /device_functionality/g_device_functionality/working_condition  = 'yes'"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_device_condition_1" readonly="true()" type="string" relevant="selected( /device_functionality/g_device_functionality/device_condition , 'broken')"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_device_condition_2" readonly="true()" type="string" relevant="selected( /device_functionality/g_device_functionality/device_condition , 'not_charged')"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_device_condition_3" readonly="true()" type="string" relevant="selected( /device_functionality/g_device_functionality/device_condition , 'stolen')"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_device_condition_4" readonly="true()" type="string" relevant="selected( /device_functionality/g_device_functionality/device_condition , 'device_freeze')"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_device" readonly="true()" type="string" relevant=" /device_functionality/g_device_functionality/device_condition  = 'stolen'"/>
      <bind nodeset="/device_functionality/s_note_submit_button/report" readonly="true()" type="string" relevant=" /device_functionality/g_device_functionality/device_condition  = 'stolen'"/>
      <bind nodeset="/device_functionality/s_note_submit_button/follow_up" readonly="true()" type="string" relevant=" /device_functionality/g_device_functionality/working_condition  = 'no'"/>
      <bind nodeset="/device_functionality/s_note_submit_button/s_followup_note" readonly="true()" type="string" relevant=" /device_functionality/g_device_functionality/working_condition  = 'no'"/>
      <bind nodeset="/device_functionality/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/device_functionality/inputs">
      <label></label>
      <group ref="/device_functionality/inputs/user">
        <label></label>
      </group>
      <group ref="/device_functionality/inputs/contact">
        <label></label>
        <input appearance="select-contact type-person" ref="/device_functionality/inputs/contact/_id">
          <label>The user being replaced</label>
        </input>
        <group appearance="hidden" ref="/device_functionality/inputs/contact/parent">
          <label></label>
          <group ref="/device_functionality/inputs/contact/parent/parent">
            <label></label>
            <group ref="/device_functionality/inputs/contact/parent/parent/parent">
              <label></label>
            </group>
          </group>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/device_functionality/g_device_functionality">
      <label>Device Functionality</label>
      <select1 appearance="horizontal" ref="/device_functionality/g_device_functionality/working_condition">
        <label>Is your device in good working condition?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/device_functionality/g_device_functionality/records_synched">
        <label>Have you synced all your records today?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/device_functionality/g_device_functionality/help_vht">
        <label>Kindly help the VHT to perform a complete sync. Do this now</label>
      </input>
      <select1 ref="/device_functionality/g_device_functionality/device_condition">
        <label>What is the condition of the device?</label>
        <item>
          <label>Broken</label>
          <value>broken</value>
        </item>
        <item>
          <label>Not charged</label>
          <value>not_charged</value>
        </item>
        <item>
          <label>Stolen (tablet or charger)</label>
          <value>stolen</value>
        </item>
        <item>
          <label>Device freeze</label>
          <value>device_freeze</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
      </select1>
      <select1 ref="/device_functionality/g_device_functionality/device">
        <label>Tablet or Charger</label>
        <item>
          <label>Tablet</label>
          <value>tablet</value>
        </item>
        <item>
          <label>Charger</label>
          <value>charger</value>
        </item>
      </select1>
      <input ref="/device_functionality/g_device_functionality/other">
        <label>Please Specify</label>
      </input>
      <select1 appearance="horizontal" ref="/device_functionality/g_device_functionality/stolen_device_reported">
        <label>Was the stolen device reported?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select ref="/device_functionality/g_device_functionality/to_who">
        <label>To who?</label>
        <item>
          <label>Police</label>
          <value>police</value>
        </item>
        <item>
          <label>Supervisor</label>
          <value>supervisor</value>
        </item>
        <item>
          <label>LC1</label>
          <value>lc1</value>
        </item>
      </select>
      <input ref="/device_functionality/g_device_functionality/police_report_advice">
        <label>&lt;span style="color:#FF0000"&gt;Advise the vht to go to the police report and obtain a police letter&lt;/span&gt;</label>
      </input>
    </group>
    <group appearance="field-list summary" ref="/device_functionality/s_note_submit_button">
      <label>&lt;h4 style="text-align:center;"&gt;Be sure you Submit to complete this action.&lt;/h4&gt;</label>
      <input appearance="h1 yellow" ref="/device_functionality/s_note_submit_button/s_note_vht_details">
        <label>VHT Details&lt;I class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/device_functionality/s_note_submit_button/s_vht_details">
        <label>&lt;h4 style=&quot;text-align:center;&quot;&gt;<output value=" /device_functionality/inputs/contact/name "/>&lt;/h4&gt;</label>
      </input>
      <input appearance="h1 blue" ref="/device_functionality/s_note_submit_button/s_device_condition">
        <label>Status of the device&lt;I class="fa fa-phone"&gt;&lt;/i&gt;</label>
      </input>
      <input appearance="li" ref="/device_functionality/s_note_submit_button/s_okay">
        <label>Okay</label>
      </input>
      <input appearance="li" ref="/device_functionality/s_note_submit_button/s_device_condition_1">
        <label>Broken</label>
      </input>
      <input appearance="li" ref="/device_functionality/s_note_submit_button/s_device_condition_2">
        <label>Not Charged</label>
      </input>
      <input appearance="li" ref="/device_functionality/s_note_submit_button/s_device_condition_3">
        <label>Stolen: (tablet or charger)</label>
      </input>
      <input appearance="li" ref="/device_functionality/s_note_submit_button/s_device_condition_4">
        <label>Device freezes</label>
      </input>
      <input appearance="li" ref="/device_functionality/s_note_submit_button/s_device">
        <label>Device: <output value=" /device_functionality/g_device_functionality/device "/></label>
      </input>
      <input appearance="li" ref="/device_functionality/s_note_submit_button/report">
        <label>Reported: <output value=" /device_functionality/g_device_functionality/to_who "/></label>
      </input>
      <input appearance="h1 green" ref="/device_functionality/s_note_submit_button/follow_up">
        <label>Follow Up&lt;i class="fa fa-flag"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/device_functionality/s_note_submit_button/s_followup_note"/>
    </group>
  </h:body>
</h:html>
