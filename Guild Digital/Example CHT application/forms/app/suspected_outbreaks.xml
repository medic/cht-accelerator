<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Disease Surveillance</h:title>
    <model>
      <instance>
        <suspected_outbreaks id="disease_surveillance" prefix="J1!disease_surveillance!" delimiter="#" version="2024-09-14  22-39">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id>0</_id>
              <name/>
              <date_of_birth/>
              <sex/>
              <parent>
                <_id/>
                <parent>
                  <_id/>
                </parent>
              </parent>
            </contact>
          </inputs>
          <patient_id/>
          <patient_name/>
          <patient_age/>
          <patient_family_id/>
          <outbreaks>
            <outbreak_reported/>
            <reported_outbreak/>
            <note_2/>
            <items_repeat jr:template="">
              <outbreak/>
              <quantity/>
              <note_4/>
            </items_repeat>
          </outbreaks>
          <s_note_submit_button>
            <s_name_of_the_vht/>
            <s_note_outbreaks/>
            <s_reported_infectious_disease/>
            <s_reported_waterborne_diseases/>
            <s_reported_vaccine_preventable_diseases/>
            <s_reported_respiratory_diseases/>
            <follow_up/>
            <s_task/>
          </s_note_submit_button>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </suspected_outbreaks>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/suspected_outbreaks/inputs" relevant="./source='user'"/>
      <bind nodeset="/suspected_outbreaks/inputs/source" type="string"/>
      <bind nodeset="/suspected_outbreaks/inputs/source_id" type="string"/>
      <bind nodeset="/suspected_outbreaks/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/suspected_outbreaks/inputs/contact/name" type="string"/>
      <bind nodeset="/suspected_outbreaks/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/suspected_outbreaks/inputs/contact/sex" type="string"/>
      <bind nodeset="/suspected_outbreaks/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/suspected_outbreaks/inputs/contact/parent/parent/_id" type="string"/>
      <bind nodeset="/suspected_outbreaks/patient_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/suspected_outbreaks/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/suspected_outbreaks/patient_age" type="string" calculate="floor( difference-in-months(  /suspected_outbreaks/inputs/contact/date_of_birth , today() ) div 12 )"/>
      <bind nodeset="/suspected_outbreaks/patient_family_id" type="string" calculate="../inputs/contact/parent/_id"/>
      <bind nodeset="/suspected_outbreaks/outbreaks/outbreak_reported" type="select1" required="true()"/>
      <bind nodeset="/suspected_outbreaks/outbreaks/reported_outbreak" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/outbreak_reported  = 'yes'"/>
      <bind nodeset="/suspected_outbreaks/outbreaks/note_2" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/outbreak_reported  = 'yes'"/>
      <bind nodeset="/suspected_outbreaks/outbreaks/items_repeat" relevant=" /suspected_outbreaks/outbreaks/outbreak_reported  = 'yes'" required="true()"/>
      <bind nodeset="/suspected_outbreaks/outbreaks/items_repeat/outbreak" type="select1" required="true()"/>
      <bind nodeset="/suspected_outbreaks/outbreaks/items_repeat/quantity" type="int" constraint=". &gt; 0 and . &lt;= 4" required="true()" relevant=" /suspected_outbreaks/outbreaks/items_repeat/outbreak  != ''"/>
      <bind nodeset="/suspected_outbreaks/outbreaks/items_repeat/note_4" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/items_repeat/quantity  != ''"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/s_name_of_the_vht" readonly="true()" type="string"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/s_note_outbreaks" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/outbreak_reported  = 'yes'"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/s_reported_infectious_disease" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/items_repeat/outbreak  = 'infectious_disease'"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/s_reported_waterborne_diseases" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/items_repeat/outbreak  = 'waterborne_diseases'"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/s_reported_vaccine_preventable_diseases" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/items_repeat/outbreak  = 'vaccine_preventable_diseases'"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/s_reported_respiratory_diseases" readonly="true()" type="string" relevant=" /suspected_outbreaks/outbreaks/items_repeat/outbreak  = 'respiratory_diseases'"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/follow_up" readonly="true()" type="string"/>
      <bind nodeset="/suspected_outbreaks/s_note_submit_button/s_task" readonly="true()" type="string"/>
      <bind nodeset="/suspected_outbreaks/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/suspected_outbreaks/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/suspected_outbreaks/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/suspected_outbreaks/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/suspected_outbreaks/inputs/contact">
        <label></label>
        <input appearance="db-object" ref="/suspected_outbreaks/inputs/contact/_id">
          <label></label>
        </input>
        <input appearance="hidden" ref="/suspected_outbreaks/inputs/contact/name">
          <label>Name</label>
        </input>
        <input appearance="hidden" ref="/suspected_outbreaks/inputs/contact/date_of_birth">
          <label>Date Of Birth</label>
        </input>
        <input appearance="hidden" ref="/suspected_outbreaks/inputs/contact/sex">
          <label>Sex</label>
        </input>
        <group ref="/suspected_outbreaks/inputs/contact/parent">
          <label>Family</label>
          <input appearance="hidden" ref="/suspected_outbreaks/inputs/contact/parent/_id">
            <label>Family ID</label>
          </input>
          <group ref="/suspected_outbreaks/inputs/contact/parent/parent">
            <label>Health Facility</label>
            <input appearance="hidden" ref="/suspected_outbreaks/inputs/contact/parent/parent/_id">
              <label>Health Facility ID</label>
            </input>
          </group>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/suspected_outbreaks/outbreaks">
      <label>OUTBREAKS</label>
      <select1 ref="/suspected_outbreaks/outbreaks/outbreak_reported">
        <label>Has any outbreaks been reported?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/suspected_outbreaks/outbreaks/reported_outbreak">
        <label>**What was the reported outbreak?**</label>
      </input>
      <input ref="/suspected_outbreaks/outbreaks/note_2">
        <label>Use the button below to add items</label>
      </input>
      <group ref="/suspected_outbreaks/outbreaks/items_repeat">
        <label></label>
        <repeat nodeset="/suspected_outbreaks/outbreaks/items_repeat" appearance="field-list">
          <select1 appearance="horizontal" ref="/suspected_outbreaks/outbreaks/items_repeat/outbreak">
            <label>Select the out break you would like to report</label>
            <item>
              <label>Infectious Disease (e.g., measles, flu, cough)</label>
              <value>infectious_disease</value>
            </item>
            <item>
              <label>Waterborne Diseases (diarrhea, cholera)</label>
              <value>waterborne_diseases</value>
            </item>
            <item>
              <label>Vaccine-preventable Diseases (whooping cough, measles)</label>
              <value>vaccine_preventable_diseases</value>
            </item>
            <item>
              <label>Respiratory Diseases (TB, Covid 19, flu, cough)</label>
              <value>respiratory_diseases</value>
            </item>
          </select1>
          <input ref="/suspected_outbreaks/outbreaks/items_repeat/quantity">
            <label>Number of times <output value=" /suspected_outbreaks/outbreaks/items_repeat/outbreak "/> was reported</label>
          </input>
          <input ref="/suspected_outbreaks/outbreaks/items_repeat/note_4">
            <label>Use the button below to add more items</label>
          </input>
        </repeat>
      </group>
    </group>
    <group appearance="field-list summary" ref="/suspected_outbreaks/s_note_submit_button">
      <label>&lt;h4 style="text-align:center;"&gt;Be sure you Submit to complete this action.&lt;/h4&gt;</label>
      <input ref="/suspected_outbreaks/s_note_submit_button/s_name_of_the_vht">
        <label>&lt;h4 style=&quot;text-align:center;&quot;&gt;<output value=" /suspected_outbreaks/inputs/contact/name "/>&lt;/h4&gt;</label>
      </input>
      <input appearance="h2 yellow" ref="/suspected_outbreaks/s_note_submit_button/s_note_outbreaks">
        <label>Reported outbreaks</label>
      </input>
      <input appearance="li" ref="/suspected_outbreaks/s_note_submit_button/s_reported_infectious_disease">
        <label>Infectious Disease (e.g., measles, flu, cough) : <output value=" /suspected_outbreaks/outbreaks/items_repeat/quantity "/> times</label>
      </input>
      <input appearance="li" ref="/suspected_outbreaks/s_note_submit_button/s_reported_waterborne_diseases">
        <label>Waterborne Diseases (diarrhea, cholera) : <output value=" /suspected_outbreaks/outbreaks/items_repeat/quantity "/> times</label>
      </input>
      <input appearance="li" ref="/suspected_outbreaks/s_note_submit_button/s_reported_vaccine_preventable_diseases">
        <label>Vaccine-preventable Diseases (whooping cough, measles) : <output value=" /suspected_outbreaks/outbreaks/items_repeat/quantity "/> times</label>
      </input>
      <input appearance="li" ref="/suspected_outbreaks/s_note_submit_button/s_reported_respiratory_diseases">
        <label>Respiratory Diseases (TB, Covid 19, flu, cough) : <output value=" /suspected_outbreaks/outbreaks/items_repeat/quantity "/> times</label>
      </input>
      <input appearance="h1 green" ref="/suspected_outbreaks/s_note_submit_button/follow_up">
        <label>Follow Up&lt;i class="fa fa-flag"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/suspected_outbreaks/s_note_submit_button/s_task">
        <label>&lt;h4 style=""&gt; Please conduct a suspected outbreak follow up task in 3 days &lt;/h4&gt;</label>
      </input>
    </group>
  </h:body>
</h:html>
