      <bind nodeset="/pregnancy/group_gestational_Age/pregnancy_report_method" type="select1" required="true()"/>
      <bind nodeset="/pregnancy/group_gestational_Age/lmp_start_date" type="date" constraint="((decimal-date-time(.)+30) &lt;= decimal-date-time(today())) and ((decimal-date-time(.)+280) &gt;= decimal-date-time(today()))" jr:constraintMsg="Date can not be less than 1 month from today and not more than 40 weeks from today" required="true()" relevant=" /pregnancy/group_gestational_Age/pregnancy_report_method  = 'lmp'"/>
