<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Device Functionality  Follow Up Form</h:title>
    <model>
      <instance>
        <device_functionality_follow_up id="device_functionality_follow_up" prefix="J1!device_functionality_follow_up!" delimiter="#" version="2024-08-27  11-03">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id>0</_id>
              <name/>
            </contact>
          </inputs>
          <g_device_functionality_follow_up>
            <file_report/>
            <police_report/>
            <file_report_date/>
            <file_report_num/>
            <no_file_report_reason/>
          </g_device_functionality_follow_up>
          <s_note_submit_button>
            <s_note_device_follow_up_details/>
            <s_note_filing_date/>
            <s_note_file_report_date/>
            <s_note_file_number/>
            <s_note_file_report_num/>
            <s_note_no_fil/>
            <s_note_no_file_report_reason/>
            <s_followup/>
            <s_followup_note/>
          </s_note_submit_button>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </device_functionality_follow_up>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/device_functionality_follow_up/inputs" relevant="./source='user'"/>
      <bind nodeset="/device_functionality_follow_up/inputs/source" type="string"/>
      <bind nodeset="/device_functionality_follow_up/inputs/source_id" type="string"/>
      <bind nodeset="/device_functionality_follow_up/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/device_functionality_follow_up/inputs/contact/name" type="string"/>
      <bind nodeset="/device_functionality_follow_up/g_device_functionality_follow_up/file_report" type="select1" required="true()"/>
      <bind nodeset="/device_functionality_follow_up/g_device_functionality_follow_up/police_report" readonly="true()" type="string" relevant=" /device_functionality_follow_up/g_device_functionality_follow_up/file_report  = 'no'"/>
      <bind nodeset="/device_functionality_follow_up/g_device_functionality_follow_up/file_report_date" type="date" required="true()" jr:constraintMsg="The date should not be from the future" relevant=" /device_functionality_follow_up/g_device_functionality_follow_up/file_report  = 'yes'" constraint=". &lt;= today()"/>
      <bind nodeset="/device_functionality_follow_up/g_device_functionality_follow_up/file_report_num" type="int" required="true()" relevant=" /device_functionality_follow_up/g_device_functionality_follow_up/file_report  = 'yes'"/>
      <bind nodeset="/device_functionality_follow_up/g_device_functionality_follow_up/no_file_report_reason" type="string" required="true()" relevant=" /device_functionality_follow_up/g_device_functionality_follow_up/file_report  = 'no'"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_note_device_follow_up_details" readonly="true()" type="string"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_note_filing_date" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'yes')"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_note_file_report_date" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'yes')"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_note_file_number" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'yes')"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_note_file_report_num" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'yes')"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_note_no_fil" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'no')"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_note_no_file_report_reason" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'no')"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_followup" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'no')"/>
      <bind nodeset="/device_functionality_follow_up/s_note_submit_button/s_followup_note" readonly="true()" type="string" relevant="selected( /device_functionality_follow_up/g_device_functionality_follow_up/file_report , 'no')"/>
      <bind nodeset="/device_functionality_follow_up/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/device_functionality_follow_up/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/device_functionality_follow_up/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/device_functionality_follow_up/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/device_functionality_follow_up/inputs/contact">
        <label></label>
        <input appearance="db-object" ref="/device_functionality_follow_up/inputs/contact/_id">
          <label></label>
        </input>
        <input appearance="hidden" ref="/device_functionality_follow_up/inputs/contact/name">
          <label>Name</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/device_functionality_follow_up/g_device_functionality_follow_up">
      <label>Device Functionality Follow Up</label>
      <select1 appearance="horizontal" ref="/device_functionality_follow_up/g_device_functionality_follow_up/file_report">
        <label>Did you file a police report?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/device_functionality_follow_up/g_device_functionality_follow_up/police_report">
        <label>If, No advise the VHT to make a police Report immediately</label>
      </input>
      <input ref="/device_functionality_follow_up/g_device_functionality_follow_up/file_report_date">
        <label>Date when the police report was filed</label>
      </input>
      <input appearance="horizontal" ref="/device_functionality_follow_up/g_device_functionality_follow_up/file_report_num">
        <label>Please share police file report number</label>
      </input>
      <input ref="/device_functionality_follow_up/g_device_functionality_follow_up/no_file_report_reason">
        <label>Why haven't you filed a report yet?</label>
      </input>
    </group>
    <group appearance="field-list summary" ref="/device_functionality_follow_up/s_note_submit_button">
      <label>&lt;h4 style="text-align:center;"&gt;Be sure you Submit to complete this action.&lt;/h4&gt;</label>
      <input appearance="h1 yellow" ref="/device_functionality_follow_up/s_note_submit_button/s_note_device_follow_up_details">
        <label>Device Functionality Follow Up Details &lt;I class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/device_functionality_follow_up/s_note_submit_button/s_note_filing_date">
        <label>&lt;h4 style="text-align:center;"&gt;**Date of Filing the Report**&lt;/h4&gt;</label>
      </input>
      <input ref="/device_functionality_follow_up/s_note_submit_button/s_note_file_report_date">
        <label>&lt;h5 style=&quot;text-align:center;&quot;&gt;<output value=" /device_functionality_follow_up/g_device_functionality_follow_up/file_report_date "/>&lt;/h5&gt;</label>
      </input>
      <input ref="/device_functionality_follow_up/s_note_submit_button/s_note_file_number">
        <label>&lt;h4 style="text-align:center;"&gt;**Police File number**&lt;/h4&gt;</label>
      </input>
      <input ref="/device_functionality_follow_up/s_note_submit_button/s_note_file_report_num">
        <label>&lt;h5 style=&quot;text-align:center;&quot;&gt;<output value=" /device_functionality_follow_up/g_device_functionality_follow_up/file_report_num "/>&lt;/h5&gt;</label>
      </input>
      <input ref="/device_functionality_follow_up/s_note_submit_button/s_note_no_fil">
        <label>&lt;h4 style="text-align:center;"&gt;**Reason for not filing a report**&lt;/h4&gt;</label>
      </input>
      <input ref="/device_functionality_follow_up/s_note_submit_button/s_note_no_file_report_reason">
        <label>&lt;h5 style=&quot;text-align:center;&quot;&gt;<output value=" /device_functionality_follow_up/g_device_functionality_follow_up/no_file_report_reason "/>&lt;/h5&gt;</label>
      </input>
      <input appearance="h1 green" ref="/device_functionality_follow_up/s_note_submit_button/s_followup">
        <label>Follow Up&lt;i class="fa fa-flag"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/device_functionality_follow_up/s_note_submit_button/s_followup_note">
        <label>&lt;h5 style="text-align:center;"&gt;You will receive a devise follow-up task in due in 5 days&lt;/h5&gt;</label>
      </input>
    </group>
  </h:body>
</h:html>
