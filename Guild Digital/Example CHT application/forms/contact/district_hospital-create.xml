          <text id="/data/contact/sex/female:label">
            <value>Female</value>
          </text>
          <text id="/data/contact/sex/male:label">
            <value>Male</value>
          </text>
          <text id="/data/contact/sex:label">
            <value>Sex</value>
          </text>
          <text id="/data/contact/short_name:hint">
            <value>Please enter a short name that is preferred by the person.</value>
          </text>
          <text id="/data/contact/short_name:label">
            <value>Short name</value>
          </text>
          <text id="/data/contact:label">
            <value>New Person</value>
          </text>
          <text id="/data/district_hospital/external_id:label">
            <value>External ID</value>
          </text>
          <text id="/data/district_hospital/is_name_generated/false:label">
            <value>No, I want to name it manually</value>
          </text>
          <text id="/data/district_hospital/is_name_generated/true:label">
            <value>Yes</value>
          </text>
          <text id="/data/district_hospital/is_name_generated:label">
            <value>Would you like to name the place after the primary contact: &quot;<output value=" /data/init/generated_name_translation "/>&quot;?</value>
          </text>
          <text id="/data/district_hospital/name:label">
            <value>Name</value>
          </text>
          <text id="/data/district_hospital/notes:label">
            <value>Notes</value>
          </text>
          <text id="/data/init/create_new_person/new_person:label">
            <value>Create a new person</value>
          </text>
          <text id="/data/init/create_new_person/none:label">
            <value>Skip this step</value>
          </text>
          <text id="/data/init/create_new_person/old_person:label">
            <value>Select an existing person</value>
          </text>
          <text id="/data/init/create_new_person:label">
            <value>Set the Primary Contact</value>
          </text>
          <text id="/data/init/custom_place_name:label">
            <value><output value=" /data/init/custom_place_name_label "/></value>
          </text>
          <text id="/data/init/custom_place_name_label_translator/name:label">
            <value>Name</value>
          </text>
          <text id="/data/init/generated_name/clinic:label">
            <value><output value=" /data/init/contact_name "/>'s Household</value>
          </text>
          <text id="/data/init/generated_name/district_hospital:label">
            <value><output value=" /data/init/contact_name "/>'s Branch</value>
          </text>
          <text id="/data/init/generated_name/health_center:label">
            <value><output value=" /data/init/contact_name "/>'s Area</value>
          </text>
          <text id="/data/init/place_type/clinic:label">
            <value>Household</value>
          </text>
          <text id="/data/init/place_type/district_hospital:label">
            <value>Health Facility</value>
          </text>
          <text id="/data/init/place_type/health_center:label">
            <value>Area</value>
          </text>
          <text id="/data/init/place_type:label">
            <value>Enter the name of this place</value>
          </text>
          <text id="/data/init/select_person:label">
            <value>Select the Primary Contact</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="contact:district_hospital:create" prefix="J1!contact:district_hospital:create!" delimiter="#" version="2022-03-19  12-25">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <district_hospital>
            <parent>PARENT</parent>
            <type/>
            <is_name_generated>true</is_name_generated>
            <name/>
            <external_id/>
            <notes/>
            <contact/>
            <geolocation/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
            </meta>
          </district_hospital>
          <init>
            <create_new_person/>
            <select_person/>
            <name/>
            <contact_name/>
            <custom_place_name_label_translator>name</custom_place_name_label_translator>
            <custom_place_name_label/>
            <custom_place_name/>
            <place_type>district_hospital</place_type>
            <place_type_translation/>
            <generated_name>district_hospital</generated_name>
            <generated_name_translation/>
          </init>
          <contact>
            <parent>PARENT</parent>
            <type>person</type>
            <name/>
            <short_name/>
            <date_of_birth/>
            <date_of_birth_method/>
            <ephemeral_dob>
              <dob_calendar/>
              <age_label/>
              <age_years/>
              <age_months/>
              <dob_method/>
              <ephemeral_months/>
              <ephemeral_years/>
              <dob_approx/>
              <dob_raw/>
              <dob_iso/>
              <dob_debug/>
            </ephemeral_dob>
            <phone/>
            <phone_alternate/>
            <sex/>
            <external_id/>
            <notes/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
            </meta>
          </contact>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="0"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/init/create_new_person" type="select1" required="true()"/>
      <bind nodeset="/data/init/select_person" type="db:person" required="true()" relevant="selected( /data/init/create_new_person ,'old_person')"/>
      <bind nodeset="/data/init/name" type="string"/>
      <bind nodeset="/data/init/contact_name" type="string" calculate="coalesce(../../contact/name, ../name)"/>
      <bind nodeset="/data/init/custom_place_name_label_translator" type="select1" relevant="selected( /data/init/create_new_person ,'none')"/>
      <bind nodeset="/data/init/custom_place_name_label" type="string" calculate="jr:choice-name( /data/init/custom_place_name_label_translator ,' /data/init/custom_place_name_label_translator ')"/>
      <bind nodeset="/data/init/custom_place_name" type="string" required="true()" relevant="selected( /data/init/create_new_person ,'none') or selected( /data/district_hospital/is_name_generated , 'false') or selected( /data/district_hospital/is_name_generated , 'no')"/>
      <bind nodeset="/data/init/place_type" type="select1"/>
      <bind nodeset="/data/init/place_type_translation" type="string" calculate="jr:choice-name( /data/init/place_type ,' /data/init/place_type ')"/>
      <bind nodeset="/data/init/generated_name" type="select1"/>
      <bind nodeset="/data/init/generated_name_translation" type="string" calculate="jr:choice-name( /data/init/generated_name ,' /data/init/generated_name ')"/>
      <bind nodeset="/data/contact" relevant="selected( /data/init/create_new_person ,'new_person')"/>
      <bind nodeset="/data/contact/parent" type="string"/>
      <bind nodeset="/data/contact/type" type="string"/>
      <bind nodeset="/data/contact/name" type="string" required="true()"/>
      <bind nodeset="/data/contact/short_name" type="string" required="false()" jr:constraintMsg="Short name can not be more than 10 characters long." constraint="string-length(.) &lt;= 10"/>
      <bind nodeset="/data/contact/date_of_birth" type="string" required="true()" calculate="../ephemeral_dob/dob_iso"/>
      <bind nodeset="/data/contact/date_of_birth_method" type="string" calculate="../ephemeral_dob/dob_method"/>
      <bind nodeset="/data/contact/ephemeral_dob/dob_calendar" type="date" required="true()" relevant="not(selected(../dob_method,'approx'))" jr:constraintMsg="Date must be before today" constraint="floor(decimal-date-time(.)) &lt;= floor(decimal-date-time(today()))"/>
      <bind nodeset="/data/contact/ephemeral_dob/age_label" readonly="true()" type="string" relevant="selected(../dob_method,'approx')"/>
      <bind nodeset="/data/contact/ephemeral_dob/age_years" type="int" required="true()" relevant="selected(../dob_method,'approx')" jr:constraintMsg="Age must be between 0 and 130" constraint=". &gt;= 0 and . &lt;= 130"/>
      <bind nodeset="/data/contact/ephemeral_dob/age_months" type="int" jr:constraintMsg="Months must between 0 and 11" relevant="selected(../dob_method,'approx')" constraint=". &gt;= 0 and . &lt;= 11"/>
      <bind nodeset="/data/contact/ephemeral_dob/dob_method" type="select"/>
      <bind nodeset="/data/contact/ephemeral_dob/ephemeral_months" type="string" calculate="if(format-date-time(today(),&quot;%m&quot;) - ../age_months &lt; 0, format-date-time(today(),&quot;%m&quot;) - ../age_months + 12, format-date-time(today(),&quot;%m&quot;) - ../age_months)"/>
      <bind nodeset="/data/contact/ephemeral_dob/ephemeral_years" type="string" calculate="if(format-date-time(today(),&quot;%m&quot;) - ../age_months &lt; 0, format-date-time(today(),&quot;%Y&quot;) - ../age_years - 1, format-date-time(today(),&quot;%Y&quot;) -../age_years)"/>
      <bind nodeset="/data/contact/ephemeral_dob/dob_approx" type="string" calculate="concat(string( /data/contact/ephemeral_dob/ephemeral_years ),'-',if( /data/contact/ephemeral_dob/ephemeral_months &lt;10, concat('0',string( /data/contact/ephemeral_dob/ephemeral_months )),  /data/contact/ephemeral_dob/ephemeral_months ),'-',string(format-date-time(today(), &quot;%d&quot;)))"/>
      <bind nodeset="/data/contact/ephemeral_dob/dob_raw" type="string" calculate="if(not(selected( ../dob_method,'approx')), 
../dob_calendar,
../dob_approx)"/>
      <bind nodeset="/data/contact/ephemeral_dob/dob_iso" type="string" calculate="format-date-time(../dob_raw,&quot;%Y-%m-%d&quot;)"/>
      <bind nodeset="/data/contact/ephemeral_dob/dob_debug" readonly="true()" type="string" relevant="0"/>
      <bind nodeset="/data/contact/phone" type="string" jr:constraintMsg="Mobile number should be 10 digits starting with 03/04/07" relevant="selected( /data/init/create_new_person ,'new_person')" constraint="regex(.,'^(03|04|07)[0-9]{8}$')"/>
      <bind nodeset="/data/contact/phone_alternate" type="string" jr:constraintMsg="Mobile number should be 10 digits starting with 03/04/07" relevant="selected( /data/init/create_new_person ,'new_person')" constraint="regex(.,'^(03|04|07)[0-9]{8}$')"/>
      <bind nodeset="/data/contact/sex" type="select1" required="true()" relevant="selected( /data/init/create_new_person ,'new_person')"/>
      <bind nodeset="/data/contact/external_id" type="string" relevant="selected( /data/init/create_new_person ,'new_person')"/>
      <bind nodeset="/data/contact/notes" type="string" relevant="selected( /data/init/create_new_person ,'new_person')"/>
      <bind nodeset="/data/contact/meta/created_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/contact/meta/created_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/contact/meta/created_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/district_hospital/parent" type="string"/>
      <bind nodeset="/data/district_hospital/type" type="string"/>
      <bind nodeset="/data/district_hospital/is_name_generated" type="select1" required="true()" relevant="not(selected( /data/init/create_new_person ,'none'))"/>
      <bind nodeset="/data/district_hospital/name" type="string" required="true()" calculate="if( ( selected( /data/district_hospital/is_name_generated , 'true') or selected( /data/district_hospital/is_name_generated , 'yes') ),  /data/init/generated_name_translation ,  /data/init/custom_place_name )"/>
      <bind nodeset="/data/district_hospital/external_id" type="string"/>
      <bind nodeset="/data/district_hospital/notes" type="string"/>
      <bind nodeset="/data/district_hospital/contact" type="string" calculate="if(selected( /data/init/create_new_person ,'none'), &quot;&quot;, coalesce( /data/init/select_person ,&quot;NEW&quot;))"/>
      <bind nodeset="/data/district_hospital/geolocation" type="string" calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))"/>
      <bind nodeset="/data/district_hospital/meta/created_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/district_hospital/meta/created_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/district_hospital/meta/created_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group ref="/data/inputs">
      <group ref="/data/inputs/user">
        <input ref="/data/inputs/user/contact_id"/>
        <input ref="/data/inputs/user/facility_id"/>
        <input ref="/data/inputs/user/name"/>
      </group>
    </group>
    <group appearance="field-list" ref="/data/init">
      <select1 appearance="horizontal-compact" ref="/data/init/create_new_person">
        <label ref="jr:itext('/data/init/create_new_person:label')"/>
        <item>
          <label ref="jr:itext('/data/init/create_new_person/new_person:label')"/>
          <value>new_person</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/create_new_person/old_person:label')"/>
          <value>old_person</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/create_new_person/none:label')"/>
          <value>none</value>
        </item>
      </select1>
      <input appearance="db-object" ref="/data/init/select_person">
        <label ref="jr:itext('/data/init/select_person:label')"/>
      </input>
      <input appearance="hidden" ref="/data/init/name"/>
      <select1 appearance="hidden" ref="/data/init/custom_place_name_label_translator">
        <item>
          <label ref="jr:itext('/data/init/custom_place_name_label_translator/name:label')"/>
          <value>name</value>
        </item>
      </select1>
      <select1 appearance="hidden" ref="/data/init/place_type">
        <label ref="jr:itext('/data/init/place_type:label')"/>
        <item>
          <label ref="jr:itext('/data/init/place_type/district_hospital:label')"/>
          <value>district_hospital</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/place_type/health_center:label')"/>
          <value>health_center</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/place_type/clinic:label')"/>
          <value>clinic</value>
        </item>
      </select1>
      <select1 appearance="hidden" ref="/data/init/generated_name">
        <item>
          <label ref="jr:itext('/data/init/generated_name/district_hospital:label')"/>
          <value>district_hospital</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/generated_name/health_center:label')"/>
          <value>health_center</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/generated_name/clinic:label')"/>
          <value>clinic</value>
        </item>
      </select1>
      <group appearance="field-list" ref="/data/contact">
        <label ref="jr:itext('/data/contact:label')"/>
        <input ref="/data/contact/name">
          <label ref="jr:itext('/data/contact/name:label')"/>
        </input>
        <input ref="/data/contact/short_name">
          <label ref="jr:itext('/data/contact/short_name:label')"/>
          <hint ref="jr:itext('/data/contact/short_name:hint')"/>
        </input>
        <group ref="/data/contact/ephemeral_dob">
          <input ref="/data/contact/ephemeral_dob/dob_calendar">
            <label ref="jr:itext('/data/contact/ephemeral_dob/dob_calendar:label')"/>
            <hint ref="jr:itext('/data/contact/ephemeral_dob/dob_calendar:hint')"/>
          </input>
          <input ref="/data/contact/ephemeral_dob/age_label">
            <label ref="jr:itext('/data/contact/ephemeral_dob/age_label:label')"/>
          </input>
          <input ref="/data/contact/ephemeral_dob/age_years">
            <label ref="jr:itext('/data/contact/ephemeral_dob/age_years:label')"/>
          </input>
          <input ref="/data/contact/ephemeral_dob/age_months">
            <label ref="jr:itext('/data/contact/ephemeral_dob/age_months:label')"/>
          </input>
          <select appearance="horizontal" ref="/data/contact/ephemeral_dob/dob_method">
            <label ref="jr:itext('/data/contact/ephemeral_dob/dob_method:label')"/>
            <item>
              <label ref="jr:itext('/data/contact/ephemeral_dob/dob_method/approx:label')"/>
              <value>approx</value>
            </item>
          </select>
          <input ref="/data/contact/ephemeral_dob/dob_debug">
            <label ref="jr:itext('/data/contact/ephemeral_dob/dob_debug:label')"/>
          </input>
        </group>
      </group>
      <input appearance="number" ref="/data/contact/phone">
        <label ref="jr:itext('/data/contact/phone:label')"/>
        <hint ref="jr:itext('/data/contact/phone:hint')"/>
      </input>
      <input appearance="number" ref="/data/contact/phone_alternate">
        <label ref="jr:itext('/data/contact/phone_alternate:label')"/>
        <hint ref="jr:itext('/data/contact/phone_alternate:hint')"/>
      </input>
      <select1 appearance="horizontal" ref="/data/contact/sex">
        <label ref="jr:itext('/data/contact/sex:label')"/>
        <item>
          <label ref="jr:itext('/data/contact/sex/female:label')"/>
          <value>female</value>
        </item>
        <item>
          <label ref="jr:itext('/data/contact/sex/male:label')"/>
          <value>male</value>
        </item>
      </select1>
      <input ref="/data/contact/external_id">
        <label ref="jr:itext('/data/contact/external_id:label')"/>
      </input>
      <input appearance="multiline" ref="/data/contact/notes">
        <label ref="jr:itext('/data/contact/notes:label')"/>
      </input>
      <group appearance="hidden" ref="/data/contact/meta"/>
    </group>
    <group appearance="field-list" ref="/data/district_hospital">
      <select1 appearance="horizontal-compact" ref="/data/district_hospital/is_name_generated">
        <label ref="jr:itext('/data/district_hospital/is_name_generated:label')"/>
        <item>
          <label ref="jr:itext('/data/district_hospital/is_name_generated/true:label')"/>
          <value>true</value>
        </item>
        <item>
          <label ref="jr:itext('/data/district_hospital/is_name_generated/false:label')"/>
          <value>false</value>
        </item>
      </select1>
      <input ref="/data/init/custom_place_name">
        <label ref="jr:itext('/data/init/custom_place_name:label')"/>
      </input>
      <input ref="/data/district_hospital/external_id">
        <label ref="jr:itext('/data/district_hospital/external_id:label')"/>
      </input>
      <input appearance="multiline" ref="/data/district_hospital/notes">
        <label ref="jr:itext('/data/district_hospital/notes:label')"/>
      </input>
      <group appearance="hidden" ref="/data/district_hospital/meta"/>
    </group>
  </h:body>
</h:html>
