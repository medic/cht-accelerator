          </text>
          <text id="/data/contact/ephemeral_dob/dob_method/approx:label">
            <value>Date of birth unknown</value>
          </text>
          <text id="/data/contact/ephemeral_dob/dob_method:label">
          </text>
          <text id="/data/contact/external_id:label">
            <value>External ID</value>
          </text>
          <text id="/data/contact/name:label">
