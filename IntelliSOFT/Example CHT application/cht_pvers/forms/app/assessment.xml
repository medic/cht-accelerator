<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Assessment</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/assessment/inputs/contact/_id:label">
            <value>What is the patient's name?</value>
          </text>
          <text id="/assessment/inputs/contact/date_of_birth:label">
            <value>Date of Birth</value>
          </text>
          <text id="/assessment/inputs/contact/name:label">
            <value>Name</value>
          </text>
          <text id="/assessment/inputs/contact/parent/_id:label">
            <value>Parent ID</value>
          </text>
          <text id="/assessment/inputs/contact/parent/parent/contact/chw_name:label">
            <value>CHW name</value>
          </text>
          <text id="/assessment/inputs/contact/parent/parent/contact/phone:label">
            <value>CHW phone</value>
          </text>
          <text id="/assessment/inputs/contact/patient_id:label">
            <value>Patient ID</value>
          </text>
          <text id="/assessment/inputs/contact/sex:label">
            <value>Sex</value>
          </text>
          <text id="/assessment/inputs/contact/short_name:label">
            <value>Short Name</value>
          </text>
          <text id="/assessment/inputs/source:label">
            <value>Source</value>
          </text>
          <text id="/assessment/inputs/source_id:label">
            <value>Source ID</value>
          </text>
          <text id="/assessment/inputs/user/contact_id:label">
            <value>Contact ID</value>
          </text>
          <text id="/assessment/inputs/user/parent/_id:label">
            <value>Parent ID</value>
          </text>
          <text id="/assessment/inputs/user:label">
            <value>User</value>
          </text>
          <text id="/assessment/reporter/group_report/death/No:label">
            <value>No</value>
          </text>
          <text id="/assessment/reporter/group_report/death/Yes:label">
            <value>Yes</value>
          </text>
          <text id="/assessment/reporter/group_report/death:label">
            <value>Have there been any deaths in the household following an adverse drug reaction, vaccine/immunization or poor quality medicine?</value>
          </text>
          <text id="/assessment/reporter/group_report/death_title:label">
            <value>Death Reporting</value>
          </text>
          <text id="/assessment/reporter/group_report/immunization/No:label">
            <value>No</value>
          </text>
          <text id="/assessment/reporter/group_report/immunization/Yes:label">
            <value>Yes</value>
          </text>
          <text id="/assessment/reporter/group_report/immunization:label">
            <value>Have you recently received any vaccination/immunization?</value>
          </text>
          <text id="/assessment/reporter/group_report/immunization_time/Beyond 7 days:label">
            <value>Beyond 7 days</value>
          </text>
          <text id="/assessment/reporter/group_report/immunization_time/Past 7 days:label">
            <value>Past 7 days</value>
          </text>
          <text id="/assessment/reporter/group_report/immunization_time/Within the Immunization Window:label">
            <value>Within the Immunization Window</value>
          </text>
          <text id="/assessment/reporter/group_report/immunization_time:label">
            <value>What time did you receive immunization?</value>
          </text>
          <text id="/assessment/reporter/group_report/medication/No:label">
            <value>No</value>
          </text>
          <text id="/assessment/reporter/group_report/medication/Yes:label">
            <value>Yes</value>
          </text>
          <text id="/assessment/reporter/group_report/medication:label">
            <value>Are you currently taking any medication?</value>
          </text>
          <text id="/assessment/reporter/group_report/medication_time/Beyond 7 days:label">
            <value>Beyond 7 days</value>
          </text>
          <text id="/assessment/reporter/group_report/medication_time/Currently taking medication:label">
            <value>Currently taking medication</value>
          </text>
          <text id="/assessment/reporter/group_report/medication_time/Past 7 days:label">
            <value>Past 7 days</value>
          </text>
          <text id="/assessment/reporter/group_report/medication_time:label">
            <value>What time did you take medication?</value>
          </text>
          <text id="/assessment/reporter/group_report/medicine/No:label">
            <value>No</value>
          </text>
          <text id="/assessment/reporter/group_report/medicine/Yes:label">
            <value>Yes</value>
          </text>
          <text id="/assessment/reporter/group_report/medicine:hint">
            <value>[ *The label looks wrong, has unusual material in it, the color is changing, the smell is unusual, the medicine/device is not working, the packet or bottle does not seem to be usual or complete*]</value>
          </text>
          <text id="/assessment/reporter/group_report/medicine:label">
            <value>Did you notice anything strange with your medicine?</value>
          </text>
          <text id="/assessment/reporter/group_report/pqmp_title:label">
            <value>Poor Quality Medicine</value>
          </text>
          <text id="/assessment/reporter/group_report/reaction/No:label">
            <value>No</value>
          </text>
          <text id="/assessment/reporter/group_report/reaction/Yes:label">
            <value>Yes</value>
          </text>
          <text id="/assessment/reporter/group_report/reaction:label">
            <value>Do you have any adverse drug reactions.</value>
          </text>
          <text id="/assessment/reporter/group_report/sadr_title:label">
            <value>Severe Adverse Reactions (Drug and Vaccines)</value>
          </text>
        </translation>
      </itext>
      <instance>
        <assessment id="assessment" prefix="J1!assessment!" delimiter="#" version="2023-08-24 09:56:20">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <user>
              <contact_id/>
              <parent>
                <_id/>
              </parent>
            </user>
            <contact>
              <_id/>
              <name/>
              <short_name/>
              <patient_id/>
              <date_of_birth>0</date_of_birth>
              <sex/>
              <parent>
                <_id/>
                <parent>
                  <contact>
                    <chw_name/>
                    <phone/>
                  </contact>
                </parent>
              </parent>
            </contact>
          </inputs>
          <patient_age_in_years tag="hidden"/>
          <patient_uuid tag="hidden"/>
          <patient_id tag="hidden"/>
          <patient_name tag="hidden"/>
          <patient_sex/>
          <visited_contact_uuid/>
          <reporter>
            <group_report>
              <sadr_title/>
              <medication/>
              <medication_time/>
              <immunization/>
              <immunization_time/>
              <reaction/>
              <pqmp_title/>
              <medicine/>
              <death_title/>
              <death/>
            </group_report>
          </reporter>
          <data tag="hidden">
            <meta tag="hidden">
              <__patient_uuid/>
              <__patient_id/>
              <__household_uuid/>
              <__source/>
              <__source_id/>
            </meta>
          </data>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </assessment>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/assessment/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/assessment/inputs/source" type="string"/>
      <bind nodeset="/assessment/inputs/source_id" type="string"/>
      <bind nodeset="/assessment/inputs/user/contact_id" type="string"/>
      <bind nodeset="/assessment/inputs/user/parent/_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/assessment/inputs/contact/name" type="string"/>
      <bind nodeset="/assessment/inputs/contact/short_name" type="string"/>
      <bind nodeset="/assessment/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/assessment/inputs/contact/sex" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/parent/contact/chw_name" type="string"/>
      <bind nodeset="/assessment/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind nodeset="/assessment/patient_age_in_years" type="string" calculate="floor( difference-in-months( ../inputs/contact/date_of_birth, today() ) div 12 )"/>
      <bind nodeset="/assessment/patient_uuid" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/assessment/patient_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/assessment/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/assessment/patient_sex" type="string" calculate="../inputs/contact/sex"/>
      <bind nodeset="/assessment/visited_contact_uuid" type="string" calculate="../inputs/contact/parent/_id"/>
      <bind nodeset="/assessment/reporter/group_report/sadr_title" readonly="true()" type="string"/>
      <bind nodeset="/assessment/reporter/group_report/medication" type="select1" required="true()"/>
      <bind nodeset="/assessment/reporter/group_report/medication_time" type="select1" required="true()" relevant="selected( /assessment/reporter/group_report/medication ,'Yes')"/>
      <bind nodeset="/assessment/reporter/group_report/immunization" type="select1" required="true()"/>
      <bind nodeset="/assessment/reporter/group_report/immunization_time" type="select1" required="true()" relevant="selected( /assessment/reporter/group_report/immunization , 'Yes')"/>
      <bind nodeset="/assessment/reporter/group_report/reaction" type="select1" required="true()" relevant="selected( /assessment/reporter/group_report/medication ,'Yes') or selected( /assessment/reporter/group_report/immunization , 'Yes')"/>
      <bind nodeset="/assessment/reporter/group_report/pqmp_title" readonly="true()" type="string"/>
      <bind nodeset="/assessment/reporter/group_report/medicine" type="select1" required="true()"/>
      <bind nodeset="/assessment/reporter/group_report/death_title" readonly="true()" type="string"/>
      <bind nodeset="/assessment/reporter/group_report/death" type="select1" required="true()"/>
      <bind nodeset="/assessment/data/meta/__patient_uuid" type="string" calculate="../../../inputs/contact/_id"/>
      <bind nodeset="/assessment/data/meta/__patient_id" type="string" calculate="../../../inputs/contact/patient_id"/>
      <bind nodeset="/assessment/data/meta/__household_uuid" type="string" calculate="../../../inputs/contact/parent/_id"/>
      <bind nodeset="/assessment/data/meta/__source" type="string" calculate="../../../inputs/source"/>
      <bind nodeset="/assessment/data/meta/__source_id" type="string" calculate="../../../inputs/source_id"/>
      <bind nodeset="/assessment/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/assessment/inputs">
      <group ref="/assessment/inputs/user">
        <label ref="jr:itext('/assessment/inputs/user:label')"/>
        <input appearance="select-contact type-person" ref="/assessment/inputs/user/contact_id">
          <label ref="jr:itext('/assessment/inputs/user/contact_id:label')"/>
        </input>
        <group ref="/assessment/inputs/user/parent"/>
      </group>
      <group ref="/assessment/inputs/contact">
        <input appearance="db-object" ref="/assessment/inputs/contact/_id">
          <label ref="jr:itext('/assessment/inputs/contact/_id:label')"/>
        </input>
        <group ref="/assessment/inputs/contact/parent">
          <group ref="/assessment/inputs/contact/parent/parent">
            <group ref="/assessment/inputs/contact/parent/parent/contact"/>
          </group>
        </group>
      </group>
    </group>
    <group ref="/assessment/reporter">
      <group appearance="field-list summary" ref="/assessment/reporter/group_report">
        <input appearance="h5 blue" ref="/assessment/reporter/group_report/sadr_title">
          <label ref="jr:itext('/assessment/reporter/group_report/sadr_title:label')"/>
        </input>
        <select1 ref="/assessment/reporter/group_report/medication">
          <label ref="jr:itext('/assessment/reporter/group_report/medication:label')"/>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/medication/Yes:label')"/>
            <value>Yes</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/medication/No:label')"/>
            <value>No</value>
          </item>
        </select1>
        <select1 ref="/assessment/reporter/group_report/medication_time">
          <label ref="jr:itext('/assessment/reporter/group_report/medication_time:label')"/>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/medication_time/Currently taking medication:label')"/>
            <value>Currently taking medication</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/medication_time/Past 7 days:label')"/>
            <value>Past 7 days</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/medication_time/Beyond 7 days:label')"/>
            <value>Beyond 7 days</value>
          </item>
        </select1>
        <select1 ref="/assessment/reporter/group_report/immunization">
          <label ref="jr:itext('/assessment/reporter/group_report/immunization:label')"/>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/immunization/Yes:label')"/>
            <value>Yes</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/immunization/No:label')"/>
            <value>No</value>
          </item>
        </select1>
        <select1 ref="/assessment/reporter/group_report/immunization_time">
          <label ref="jr:itext('/assessment/reporter/group_report/immunization_time:label')"/>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/immunization_time/Within the Immunization Window:label')"/>
            <value>Within the Immunization Window</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/immunization_time/Past 7 days:label')"/>
            <value>Past 7 days</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/immunization_time/Beyond 7 days:label')"/>
            <value>Beyond 7 days</value>
          </item>
        </select1>
        <select1 ref="/assessment/reporter/group_report/reaction">
          <label ref="jr:itext('/assessment/reporter/group_report/reaction:label')"/>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/reaction/Yes:label')"/>
            <value>Yes</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/reaction/No:label')"/>
            <value>No</value>
          </item>
        </select1>
        <input appearance="h5 blue" ref="/assessment/reporter/group_report/pqmp_title">
          <label ref="jr:itext('/assessment/reporter/group_report/pqmp_title:label')"/>
        </input>
        <select1 ref="/assessment/reporter/group_report/medicine">
          <label ref="jr:itext('/assessment/reporter/group_report/medicine:label')"/>
          <hint ref="jr:itext('/assessment/reporter/group_report/medicine:hint')"/>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/medicine/Yes:label')"/>
            <value>Yes</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/medicine/No:label')"/>
            <value>No</value>
          </item>
        </select1>
        <input appearance="h5 blue" ref="/assessment/reporter/group_report/death_title">
          <label ref="jr:itext('/assessment/reporter/group_report/death_title:label')"/>
        </input>
        <select1 ref="/assessment/reporter/group_report/death">
          <label ref="jr:itext('/assessment/reporter/group_report/death:label')"/>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/death/Yes:label')"/>
            <value>Yes</value>
          </item>
          <item>
            <label ref="jr:itext('/assessment/reporter/group_report/death/No:label')"/>
            <value>No</value>
          </item>
        </select1>
      </group>
    </group>
    <group appearance="hidden" ref="/assessment/data">
      <group ref="/assessment/data/meta"/>
    </group>
  </h:body>
</h:html>
