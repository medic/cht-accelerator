<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Death Confirmation</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/death_confirmation/death_details/date_of_death:jr:constraintMsg">
            <value>Date of death can only be from today up to 1 year ago.</value>
          </text>
          <text id="/death_confirmation/death_details/date_of_death:label">
            <value>Date of Death</value>
          </text>
          <text id="/death_confirmation/death_details/death_information:label">
            <value>Provide any relevant information related to the death of <output value=" /death_confirmation/patient_display_name "/>.</value>
          </text>
          <text id="/death_confirmation/death_details/place_of_death/Health Facility:label">
            <value>Health facility</value>
          </text>
          <text id="/death_confirmation/death_details/place_of_death/Home:label">
            <value>Home</value>
          </text>
          <text id="/death_confirmation/death_details/place_of_death/Other:label">
            <value>Other</value>
          </text>
          <text id="/death_confirmation/death_details/place_of_death:label">
            <value>Place of death</value>
          </text>
          <text id="/death_confirmation/death_details/place_of_death_other:label">
            <value>Specify other</value>
          </text>
          <text id="/death_confirmation/death_details:label">
            <value>Death details</value>
          </text>
          <text id="/death_confirmation/group_review/r_death_info:label">
            <value>&lt;div style=&quot;text-align:center;&quot;&gt;Relevant Information: <output value=" /death_confirmation/death_details/death_information "/>&lt;/div&gt;</value>
          </text>
          <text id="/death_confirmation/group_review/r_key_instruction:label">
            <value>&lt;b&gt;Important Information&lt;/b&gt;&lt;i class="fa fa-warning"&gt;&lt;/i&gt;</value>
          </text>
          <text id="/death_confirmation/group_review/r_patient_details:label">
            <value>&lt;div style=&quot;text-align:center;&quot;&gt;<output value=" /death_confirmation/patient_display_name "/>
<output value=" /death_confirmation/group_review/c_patient_age "/>
Date of Death: <output value=" /death_confirmation/death_details/date_of_death "/>&lt;/div&gt;</value>
          </text>
          <text id="/death_confirmation/group_review/r_referral:label">
            <value>&lt;b&gt;You will never be able to do any follow ups on <output value=" /death_confirmation/patient_display_name "/> when you submit this death report.&lt;/b&gt;</value>
          </text>
          <text id="/death_confirmation/group_review/r_summary_details:label">
            <value>Patient Details&lt;I class="fa fa-user"&gt;&lt;/i&gt;</value>
          </text>
          <text id="/death_confirmation/group_review/r_undo:label">
            <value>You will be able to undo this death report later, if needed.</value>
          </text>
          <text id="/death_confirmation/group_review/submit:label">
            <value>&lt;h4 style="text-align:center;"&gt;To finish, be sure to click the Submit button.&lt;/h4&gt;</value>
          </text>
          <text id="/death_confirmation/inputs/contact/_id:label">
            <value>What is the patient's name?</value>
          </text>
          <text id="/death_confirmation/inputs/contact/date_of_birth:label">
            <value>Date of Birth</value>
          </text>
          <text id="/death_confirmation/inputs/contact/name:label">
            <value>Name</value>
          </text>
          <text id="/death_confirmation/inputs/contact/parent/_id:label">
            <value>Parent ID</value>
          </text>
          <text id="/death_confirmation/inputs/contact/parent/parent/contact/chw_name:label">
            <value>CHW name</value>
          </text>
          <text id="/death_confirmation/inputs/contact/parent/parent/contact/phone:label">
            <value>CHW phone</value>
          </text>
          <text id="/death_confirmation/inputs/contact/patient_id:label">
            <value>Patient ID</value>
          </text>
          <text id="/death_confirmation/inputs/contact/sex:label">
            <value>Sex</value>
          </text>
          <text id="/death_confirmation/inputs/contact/short_name:label">
            <value>Short Name</value>
          </text>
          <text id="/death_confirmation/inputs/source:label">
            <value>Source</value>
          </text>
          <text id="/death_confirmation/inputs/source_id:label">
            <value>Source ID</value>
          </text>
          <text id="/death_confirmation/inputs/user/contact_id:label">
            <value>Contact ID</value>
          </text>
          <text id="/death_confirmation/inputs/user/parent/_id:label">
            <value>Parent ID</value>
          </text>
          <text id="/death_confirmation/inputs/user:label">
            <value>User</value>
          </text>
        </translation>
      </itext>
      <instance>
        <death_confirmation id="death_confirmation" prefix="J1!death_confirmation!" delimiter="#" version="2023-07-30 23:23:24">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <user>
              <contact_id/>
              <parent>
                <_id/>
              </parent>
            </user>
            <contact>
              <_id/>
              <name/>
              <short_name/>
              <patient_id/>
              <date_of_birth>0</date_of_birth>
              <sex/>
              <parent>
                <_id/>
                <parent>
                  <contact>
                    <chw_name/>
                    <phone/>
                  </contact>
                </parent>
              </parent>
            </contact>
          </inputs>
          <patient_age_in_years tag="hidden">0</patient_age_in_years>
          <patient_age_in_months tag="hidden">0</patient_age_in_months>
          <patient_age_in_days tag="hidden"/>
          <patient_uuid tag="hidden"/>
          <patient_id tag="hidden"/>
          <patient_name tag="hidden"/>
          <patient_short_name tag="hidden"/>
          <patient_display_name tag="hidden"/>
          <death_details>
            <date_of_death/>
            <place_of_death/>
            <place_of_death_other/>
            <death_information/>
          </death_details>
          <group_review tag="hidden">
            <submit/>
            <r_summary_details/>
            <c_patient_age/>
            <r_patient_details/>
            <r_death_info/>
            <r_key_instruction/>
            <blank_note/>
            <r_referral/>
            <r_undo/>
          </group_review>
          <data tag="hidden">
            <__date_of_death/>
            <__place_of_death/>
            <__place_of_death_other/>
            <__death_information/>
            <meta tag="hidden">
              <__patient_uuid/>
              <__patient_id/>
              <__household_uuid/>
              <__source/>
              <__source_id/>
            </meta>
          </data>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </death_confirmation>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/death_confirmation/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/death_confirmation/inputs/source" type="string"/>
      <bind nodeset="/death_confirmation/inputs/source_id" type="string"/>
      <bind nodeset="/death_confirmation/inputs/user/contact_id" type="string"/>
      <bind nodeset="/death_confirmation/inputs/user/parent/_id" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/death_confirmation/inputs/contact/name" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/short_name" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/sex" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/parent/parent/contact/chw_name" type="string"/>
      <bind nodeset="/death_confirmation/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind nodeset="/death_confirmation/patient_age_in_years" type="string" calculate="floor( difference-in-months(  /death_confirmation/inputs/contact/date_of_birth , today() ) div 12 )"/>
      <bind nodeset="/death_confirmation/patient_age_in_months" type="string" calculate="difference-in-months(  /death_confirmation/inputs/contact/date_of_birth , today() )"/>
      <bind nodeset="/death_confirmation/patient_age_in_days" type="string" calculate="floor(decimal-date-time(today()) - decimal-date-time( /death_confirmation/inputs/contact/date_of_birth ) )"/>
      <bind nodeset="/death_confirmation/patient_uuid" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/death_confirmation/patient_id" type="string" calculate="../inputs/contact/patient_id"/>
      <bind nodeset="/death_confirmation/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/death_confirmation/patient_short_name" type="string" calculate="../inputs/contact/short_name"/>
      <bind nodeset="/death_confirmation/patient_display_name" type="string" calculate="if(../patient_short_name = '', ../patient_name, concat(../patient_name, ' (', ../patient_short_name, ')'))"/>
      <bind nodeset="/death_confirmation/death_details/date_of_death" type="date" jr:constraintMsg="jr:itext('/death_confirmation/death_details/date_of_death:jr:constraintMsg')" required="true()" constraint="(. &lt;= now()) and floor(decimal-date-time(today()) - decimal-date-time(.)) &lt;= 365"/>
      <bind nodeset="/death_confirmation/death_details/place_of_death" type="select1" required="true()"/>
      <bind nodeset="/death_confirmation/death_details/place_of_death_other" type="string" relevant="selected(../place_of_death, 'Other')" required="true()"/>
      <bind nodeset="/death_confirmation/death_details/death_information" type="string"/>
      <bind nodeset="/death_confirmation/group_review/submit" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/group_review/r_summary_details" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/group_review/c_patient_age" type="string" calculate="if(../../patient_age_in_days &lt; 31, 
concat(../../patient_age_in_days, ' days old'),
if(../../patient_age_in_months &lt; 12, 
concat(../../patient_age_in_months, ' months old'), 
concat(../../patient_age_in_years, ' years old')))"/>
      <bind nodeset="/death_confirmation/group_review/r_patient_details" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/group_review/r_death_info" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/group_review/r_key_instruction" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/group_review/blank_note" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/group_review/r_referral" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/group_review/r_undo" readonly="true()" type="string"/>
      <bind nodeset="/death_confirmation/data/__date_of_death" type="string" calculate=" /death_confirmation/death_details/date_of_death "/>
      <bind nodeset="/death_confirmation/data/__place_of_death" type="string" calculate=" /death_confirmation/death_details/place_of_death "/>
      <bind nodeset="/death_confirmation/data/__place_of_death_other" type="string" calculate=" /death_confirmation/death_details/place_of_death_other "/>
      <bind nodeset="/death_confirmation/data/__death_information" type="string" calculate=" /death_confirmation/death_details/death_information "/>
      <bind nodeset="/death_confirmation/data/meta/__patient_uuid" type="string" calculate="../../../inputs/contact/_id"/>
      <bind nodeset="/death_confirmation/data/meta/__patient_id" type="string" calculate="../../../inputs/contact/patient_id"/>
      <bind nodeset="/death_confirmation/data/meta/__household_uuid" type="string" calculate="../../../inputs/contact/parent/_id"/>
      <bind nodeset="/death_confirmation/data/meta/__source" type="string" calculate="../../../inputs/source"/>
      <bind nodeset="/death_confirmation/data/meta/__source_id" type="string" calculate="../../../inputs/source_id"/>
      <bind nodeset="/death_confirmation/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/death_confirmation/inputs">
      <group ref="/death_confirmation/inputs/user">
        <label ref="jr:itext('/death_confirmation/inputs/user:label')"/>
        <input appearance="select-contact type-person" ref="/death_confirmation/inputs/user/contact_id">
          <label ref="jr:itext('/death_confirmation/inputs/user/contact_id:label')"/>
        </input>
        <group ref="/death_confirmation/inputs/user/parent"/>
      </group>
      <group ref="/death_confirmation/inputs/contact">
        <input appearance="db-object" ref="/death_confirmation/inputs/contact/_id">
          <label ref="jr:itext('/death_confirmation/inputs/contact/_id:label')"/>
        </input>
        <group ref="/death_confirmation/inputs/contact/parent">
          <group ref="/death_confirmation/inputs/contact/parent/parent">
            <group ref="/death_confirmation/inputs/contact/parent/parent/contact"/>
          </group>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/death_confirmation/death_details">
      <label ref="jr:itext('/death_confirmation/death_details:label')"/>
      <input ref="/death_confirmation/death_details/date_of_death">
        <label ref="jr:itext('/death_confirmation/death_details/date_of_death:label')"/>
      </input>
      <select1 ref="/death_confirmation/death_details/place_of_death">
        <label ref="jr:itext('/death_confirmation/death_details/place_of_death:label')"/>
        <item>
          <label ref="jr:itext('/death_confirmation/death_details/place_of_death/Health Facility:label')"/>
          <value>Health Facility</value>
        </item>
        <item>
          <label ref="jr:itext('/death_confirmation/death_details/place_of_death/Home:label')"/>
          <value>Home</value>
        </item>
        <item>
          <label ref="jr:itext('/death_confirmation/death_details/place_of_death/Other:label')"/>
          <value>Other</value>
        </item>
      </select1>
      <input ref="/death_confirmation/death_details/place_of_death_other">
        <label ref="jr:itext('/death_confirmation/death_details/place_of_death_other:label')"/>
      </input>
      <input appearance="multiline" ref="/death_confirmation/death_details/death_information">
        <label ref="jr:itext('/death_confirmation/death_details/death_information:label')"/>
      </input>
    </group>
    <group appearance="field-list summary" ref="/death_confirmation/group_review">
      <input ref="/death_confirmation/group_review/submit">
        <label ref="jr:itext('/death_confirmation/group_review/submit:label')"/>
      </input>
      <input appearance="h1 yellow" ref="/death_confirmation/group_review/r_summary_details">
        <label ref="jr:itext('/death_confirmation/group_review/r_summary_details:label')"/>
      </input>
      <input ref="/death_confirmation/group_review/r_patient_details">
        <label ref="jr:itext('/death_confirmation/group_review/r_patient_details:label')"/>
      </input>
      <input ref="/death_confirmation/group_review/r_death_info">
        <label ref="jr:itext('/death_confirmation/group_review/r_death_info:label')"/>
      </input>
      <input appearance="h1 blue" ref="/death_confirmation/group_review/r_key_instruction">
        <label ref="jr:itext('/death_confirmation/group_review/r_key_instruction:label')"/>
      </input>
      <input ref="/death_confirmation/group_review/blank_note"/>
      <input appearance="h1 red" ref="/death_confirmation/group_review/r_referral">
        <label ref="jr:itext('/death_confirmation/group_review/r_referral:label')"/>
      </input>
      <input ref="/death_confirmation/group_review/r_undo">
        <label ref="jr:itext('/death_confirmation/group_review/r_undo:label')"/>
      </input>
    </group>
    <group appearance="hidden" ref="/death_confirmation/data">
      <group ref="/death_confirmation/data/meta"/>
    </group>
  </h:body>
</h:html>
